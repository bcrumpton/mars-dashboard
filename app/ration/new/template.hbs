<div class="box-body">
  {{!-- TODO add action for form and form.controller --}}
  <form>
    {{!-- TODO add for and ids to labels and inputs --}}
    <div class="form-group">
      <label>Name</label>
      <input type="email" class="form-control" placeholder="Name">
    </div>
    <div class="form-group">
      {{!-- TODO make these bind the data and not be stupid links --}}
      <label>Type</label>
      {{#bs-dropdown as |dd|}}
        {{#dd.toggle}}Select <span class="caret"></span>{{/dd.toggle}}
        {{#dd.menu as |ddm|}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Beverage{{/link-to}}
          {{/ddm.item}}
          {{ddm.divider}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Condiment{{/link-to}}
          {{/ddm.item}}
          {{ddm.divider}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Fresh Food{{/link-to}}
          {{/ddm.item}}
          {{ddm.divider}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Intermediate Moisture{{/link-to}}
          {{/ddm.item}}
          {{ddm.divider}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Irradiated{{/link-to}}
          {{/ddm.item}}
          {{ddm.divider}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Rehydratable Food{{/link-to}}
          {{/ddm.item}}
          {{ddm.divider}}
          {{#ddm.item}}
            {{#link-to "ration.new"}}Thermostabilized{{/link-to}}
          {{/ddm.item}}
        {{/dd.menu}}
      {{/bs-dropdown}}
    </div>
    <div class="form-group">
      <label>Weight</label>
      <input type="password" class="form-control" placeholder="Weight">
    </div>
    <div class="form-group">
      <label>Expires On</label> {{bootstrap-datepicker value=expiresAt placeholder="Date" class="form-control"}}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
{{outlet}}
