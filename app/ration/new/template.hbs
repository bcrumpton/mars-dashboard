<div class="box-body">
  {{!-- TODO add action for form and form.controller --}}
  <form>
    {{!-- TODO add for and ids to labels and inputs --}}
    <div class="form-group">
      <label>Name</label>
      <input class="form-control" placeholder="Name" value=formValues.name>
    </div>
    <div class="form-group">
      {{!-- TODO make these bind the data and not be stupid links --}}
      <label>Type</label>
      <p>
        {{select-picker content=types
          selection=formValues.type
          changeAction=(mut formValues.type)}}
      </p>
    </div>
    <div class="form-group">
      <label>Qty</label>
    <input class="form-control" placeholder="Qty" value=formValues.quantity>
    </div>
    <div class="form-group">
      <label>Unit Weight</label>
      <input class="form-control" placeholder="Weight" value=formValues.weight>
    </div>
    <div class="form-group">
      <label>Expires On</label> {{bootstrap-datepicker value=formValues.expiration placeholder="Date" class="form-control"}}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
{{outlet}}
